@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Login</title>

	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/vendors/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />

	<style>
	</style>
</head>

<body>
	<div class="row g-0">
		<div class="col g-0">
			<div class="w-100 min-vh-100 d-flex justify-content-center align-items-center g-0">

				<div class="row">
					<div class="col p-5 border-2 border-dark shadow">
						<img src="~/images/logo/Zeus-05.png" alt="ZEUS" height="72" />

						<h1 class="h3 text-center mt-3">
							Login
						</h1>

						<form>
							<div class="input-group mt-3">
								<label for="emailAddress" class="visually-hidden-focusable">Email Address</label>
								<span id="emailAddressAddon" class="input-group-text">@@</span>
								<input type="email" id="emailAddress" class="form-control"
									   placeholder="Email Address" aria-label="Email Address" aria-describedby="emailAddressAddon">
							</div>

							<div class="input-group mt-3">
								<label for="password" class="visually-hidden-focusable">Password</label>
								<span class="input-group-text bi-key-fill" id="passwordAddon"></span>
								<input type="Password" class="form-control"
									   placeholder="Password" aria-label="Password" aria-describedby="passwordAddon">
							</div>

							<div class="form-group form-check text-start mt-3">
								<input type="checkbox" id="rememberMe" class="form-check-input" value="rememberMe" />
								<label class="form-check-label" for="rememberMe">
									Remember Me
								</label>
							</div>

							<div class="form-group text-center mt-3">
								<button type="submit" class="btn btn-primary btn-block">Login</button>
								<button type="reset" class="btn btn-primary btn-block">Reset</button>
							</div>

							<div class="mt-3 text-center fs-6">
								© 2021 - <a href="https://aien.net/">ZEUS</a>
							</div>
						</form>
					</div>
				</div>

			</div>
		</div>

		<div class="col g-0 d-none d-md-block">
			<div class="w-100 min-vh-100 d-flex justify-content-center align-items-center bg-dark">
				<img src="~/images/logo/Zeus-04.png" alt="ZEUS" width="300" />
			</div>
		</div>
	</div>
</body>

</html>
